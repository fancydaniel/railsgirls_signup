<%= simple_form_for @user do |f| %>
  <%= f.input :first_name, required: true %>
  <%= f.input :last_name, required: true %>
  <%= f.input :email, required: true %>
  <%= f.input :twitter_handle, prompt: "https://twitter.com/", required: false %>
  <%= f.input :phone, required: false %>
  <%= f.input :zipcode, required: false %>
  <%= f.input :over_21, required: true %>
  <%= f.input :age, collection: 13..20, prompt: "If not 21 Select your age" %>
  <%= f.input :operating_system, collection: [ "Mac", "Linux", "Windows"], include_blank: false, required: true %>
  <%= f.input :rating, collection: 1..5, as: :radio_buttons  %>
  <%= f.button :submit %>
<% end %>
